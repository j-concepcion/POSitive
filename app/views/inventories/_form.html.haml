= simple_form_for @inventory, html:{class: 'form-horizontal', role: 'form'} do |f|
  = form_error_notification(f)
  = f.input :item_name
  = f.input :quantity
  = f.input :date_purchased, as: :string, input_html: { 'data-provide' => 'datepicker'}, label: "Date Purchased"
  = f.input :expiration_date, as: :string, input_html: { 'data-provide' => 'datepicker'}, label: "Expiration Date"
  = f.input :waste_age
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.button :submit
