.row
  .col-md-12
    .page-header
      %h1
        Inventory Detail
        = link_to edit_inventory_path(@inventory), class: "btn btn-primary btn-xs", "data-toggle" => "tooltip", "data-placement" => "top", title: "Edit inventory" do
          %span.glyphicon.glyphicon-edit
        = link_to inventories_path, class: "btn btn-default btn-xs", "data-toggle" => "tooltip", "data-placement" => "top", title: "Inventories index" do
          %span.glyphicon.glyphicon-list
.row
  .col-md-2
    <strong>Item name:</strong>
  .col-md-10
    = @inventory.item_name
.row
  .col-md-2
    <strong>Quantity:</strong>
  .col-md-10
    = @inventory.quantity
.row
  .col-md-2
    <strong>Buying price:</strong>
  .col-md-10
    = @inventory.buying_price
.row
  .col-md-2
    <strong>Selling price:</strong>
  .col-md-10
    = @inventory.selling_price
.row
  .col-md-2
    <strong>Date purchased:</strong>
  .col-md-10
    = @inventory.date_purchased
.row
  .col-md-2
    <strong>Expiration date:</strong>
  .col-md-10
    = @inventory.expiration_date
.row
  .col-md-2
    <strong>Waste age:</strong>
  .col-md-10
    = @inventory.waste_age
