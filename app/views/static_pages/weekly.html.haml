.row
  .col-md-12
    .page-header
      %h1 Weekly Sales

%table.table.table-condensed.table-hover
  %tr
    %th For the week:
    %td= Time.now.beginning_of_week.strftime("%d %b %y") 
    %td to
    %td= Time.now.end_of_week.strftime("%d %b %y") 
  %tr
    %th Specials
    %th Quantity
    %th Item Price
    %th Sold per Item
  - Product.where(:category=>"Special").each do |prod|
    - @total = 0
    - @item_qty = 0
    %tr
      %td= prod.item_name
      - OrderSlip.where("created_at >= ? and created_at < ?", Time.now.beginning_of_week, Time.now.end_of_week).each do |tab|
        - tab.order_slip_items.each do |tab_item|
          - if (prod.item_name == Product.find(tab_item.product_id).item_name)
            - @item_qty = @item_qty + tab_item.quantity
      %td= @item_qty
      %td= number_with_precision(prod.price, precision: 2)
      - @items_sold = @item_qty * prod.price
      %td= number_with_precision(@items_sold, precision: 2)
    - @total = @total + @items_sold

