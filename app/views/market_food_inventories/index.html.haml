.row
  .col-md-12
    .page-header
      %h1
        Market Food Inventories Index
        = link_to new_market_food_inventory_path, class: "btn btn-primary btn-xs", "data-toggle" => "tooltip", "data-placement" => "top", title: "Add market_food_inventory" do
          %span.glyphicon.glyphicon-plus
.row
  .col-md-12
    .well
      = search_form_for @q, html:{class: 'form-inline', role: 'form'} do |f|
        %kbd Search
        .form-group
          = f.label :item_name_cont, class: 'sr-only'
          = f.input_field :item_name_cont, as: 'string', placeholder: 'Item name'
        .form-group
          = f.label :quantity_cont, class: 'sr-only'
          = f.input_field :quantity_cont, as: 'string', placeholder: 'Quantity'
        = button_tag class: 'btn btn-default' do
          %span.glyphicon.glyphicon-search
        = link_to 'Clear', request.path
    %table.table.table-condensed.table-hover
      %tr
        %th= sort_link(@q, :item_name)
        %th= sort_link(@q, :quantity)
        %th
      - @market_food_inventories.each do |market_food_inventory|
        %tr
          %td= market_food_inventory.item_name
          %td= market_food_inventory.quantity
          %td
            .btn-group.btn-group-xs
              = link_to market_food_inventory, class: 'btn btn-primary' do
                %span.glyphicon.glyphicon-eye-open
                View              
              %button.btn.btn-primary.dropdown-toggle{'type' => 'button', 'data-toggle' => 'dropdown'}
                %span.caret
                %span.sr-only Toggle Dropdown
              %ul.dropdown-menu{role: 'menu'}
                %li
                  = link_to edit_market_food_inventory_path(market_food_inventory) do
                    %span.glyphicon.glyphicon-edit
                    Edit
                %li
                  = link_to market_food_inventory, :method => :delete, :data => { :confirm => 'Are you sure?' } do
                    %span.glyphicon.glyphicon-trash
                    Destroy
    = paginate @market_food_inventories, theme: 'twitter-bootstrap-3', pagination_class: "pagination-sm"
